<project name="RecocidoSimulado" basedir=".">
	<property name="src.main.dir" value="src"/>
	<property name="src.test.dir" value="${src.main.dir}/test"/>

	<property name="build.main.dir" value="build"/>
	<property name="classes.dir" value="${build.main.dir}/classes"/>
	<property name="test.classes.dir" value="${build.main.dir}/test"/>
	
	<property name="jar.dir"	value="${build.main.dir}/jar"/>
	<property name="main-class" value="principal.Main"/>
	<property name="nombre-jar" value="${jar.dir}/${ant.project.name}.jar"/>

	<property name="lib.dir"	value="lib"/>

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>

	<path id="application" location="${nombre-jar}"/>
	
	<target name ="clean" description="borra lo compilado">
		<delete dir="${build.main.dir}"/>
	</target>

	<target name="compile" depends = "clean">
	    <mkdir dir="${classes.dir}"/>
        <javac includeantruntime="false" srcdir="${src.main.dir}" destdir="${classes.dir}" classpathref="classpath"/>
		<javac includeantruntime="false" srcdir="${src.test.dir}" destdir="${build.main.dir}" classpathref="classpath"/>
		<mkdir dir="${jar.dir}"/>
		<jar destfile="${nombre-jar}" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>		
		</jar>
    </target>

    <target name="run" depends="compile">
        <java classname="${main-class}" fork="true">
			<classpath>
				<path refid="classpath"/>
				<path location="${nombre-jar}"/>
			</classpath>
		</java>
    </target>

	<target name="test" depends="compile">
		<junit printsummary="yes">
			<formatter type="plain" usefile="false"/>			
			<classpath>
				<path refid="classpath"/>
				<path refid="application"/>
			</classpath>
			<batchtest fork="yes">
				<fileset dir="${src.test.dir}" includes="**./*Test.java"/>
			</batchtest>
		</junit>
	</target>
</project>
